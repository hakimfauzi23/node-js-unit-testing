{
  "name": "js-unit-test",
  "version": "1.0.0",
  "description": "Learning NodeJS unit test",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": false,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!vendor/**/*.{js,jsx}"
    ],
    "maxConcurrency": 4
  },
  "author": "hakimfauzi23",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "babel-jest": "^29.2.0",
    "jest": "^29.2.0"
  }
}
